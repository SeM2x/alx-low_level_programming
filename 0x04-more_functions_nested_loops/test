#include <stdio.h>

/**
 * main - prints the largest prime factor of 612852475143
 *
 * Return: 0
*/

int is_prime(long int num) {
    if (num <= 1) {
        return 0;
    }
    if (num == 2) {
        return 1;
    }
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) {
            return 0;
        }
    }
    return 1;
}

int prime_factors(long int n, long int factors[])
{
	long int f, i;

	i = 0;
	f = 0;
        while (n > 1)
        {
                while(1)
                {
                        if (is_prime(f) && n % f == 0)
                        {
                                factors[i] = f;
				printf("added %ld to factors\n", f);
                                n = n / f;
                                i++;
                                break;
                        }
			//printf("loading... %ld\n", f);
                        f++;
                }
       }
	return (i);
}
int main(void)
{
	long int factors[10];
	int i;

	int l = prime_factors(612852475143, factors);
	i = 0;
	for (i = 0; i < l; i++)
		printf("factor n%d: %ld\n",i ,factors[i]);
	return (0);
}
